#!/bin/sh

# Prints the current volume or üîá if muted.

[ $(pamixer --get-mute) = true ] && icon="Ô±ù" && echo " $icon " && exit

vol="$(pamixer --get-volume)"

case 1 in
  $((vol >= 70)) ) icon="ÔÄ®" ;;
  $((vol >= 30)) ) icon="ÔÄß" ;;
  $((vol >= 1)) ) icon="ÔÄ¶" ;;
  * ) icon="Ô±ù"; echo " $icon " && exit ;;
esac
   
case $BLOCK_BUTTON in
	3) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	1) 

    notify-send "Volume is $vol%" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo -e " $icon "
