#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && dunstify -r $(echo $0 | cksum | cut -b 1,2,3,4,5) "<b>ğŸ”‹ Battery module:</b>
ğŸ”‹: discharging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)
icon=ï‰„
color="#FFF"
if [ "$capacity" -ge 90 ]; then
	icon=ï‰€
elif [ "$capacity" -ge 70 ]; then
	icon=ï‰
elif [ "$capacity" -ge 50 ]; then
	icon=ï‰‚
elif [ "$capacity" -ge 30 ]; then
	icon=ï‰ƒ
elif [ "$capacity" -ge 20 ]; then
	icon=ï‰ƒ
else
	icon=ï‰„
    color="#ff5555"
	warn="â—"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#FFF"

printf "<span color='%s'>%s%s%s</span>" "$color" "$(echo "$status" | sed -e "s/,//g;s/Discharging/${icon}/;s/Charging/ïƒ§/;s/Unknown/â™»ï¸/;s/Full/ïƒ§ï‰€/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
