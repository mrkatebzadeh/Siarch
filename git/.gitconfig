# Local/private config goes in the include
[include]
    path = ~/.config/.gitconfig.sec

[user]
    name = Fabrice Laporte

[core]
    editor = nano
    excludesfile = ~/.gitignore

# From there, sections are in alphabetic order

[alias]
    last = log -1 HEAD
    co = checkout
    st = status
    uncommit = reset --soft HEAD~
    unstage = reset HEAD --
    lg = log --graph --abbrev-commit --decorate --date=relative --all

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = icdiff $LOCAL $REMOTE

[gui]
    # Remove `git gui` pop-up warning
    gcwarning = false

[help]
    autocorrect = 1

[mergetool]
    keepBackup = false

[pull]
    rebase = true

[push]
    default = simple

[rebase]
    autoStash = true
