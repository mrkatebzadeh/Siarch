#!/bin/sh
cmds=( "🔒 lock" "🚪 logout" "♻ renew WM" "🐻 hibernate" "🔃 reboot" "🖥 shutdown" )

#selected=$(printf "%s\n" "${cmds[@]}"| fzf --height 100% --multi -i --reverse --prompt="Action: ")
selected=$(printf "%s\n" "${cmds[@]}"| dmenu -l 6)

case "$selected" in
"🔒 lock")		betterlockscreen -l;;
"🚪 logout")	kill -TERM $(pgrep -u $USER "\bdwm$");;
"♻ renew WM")	kill -HUP $(pgrep -u $USER "\bdwm$");;
"🐻 hibernate")	slock ${hib:-systemctl suspend-then-hibernate -i} ;;
"🔃 reboot")	${reb:-sudo -A reboot};;
"🖥 shutdown")	${shut:-sudo -A shutdown -h now};;
esac
