#!/bin/sh
cmds=( "ğŸ”’ lock" "ğŸšª logout" "â™» renew WM" "ğŸ» hibernate" "ğŸ”ƒ reboot" "ğŸ–¥ shutdown" )

#selected=$(printf "%s\n" "${cmds[@]}"| fzf --height 100% --multi -i --reverse --prompt="Action: ")
selected=$(printf "%s\n" "${cmds[@]}"| dmenu -l 6)

case "$selected" in
"ğŸ”’ lock")		betterlockscreen -l;;
"ğŸšª logout")	kill -TERM $(pgrep -u $USER "\bdwm$");;
"â™» renew WM")	kill -HUP $(pgrep -u $USER "\bdwm$");;
"ğŸ» hibernate")	slock ${hib:-systemctl suspend-then-hibernate -i} ;;
"ğŸ”ƒ reboot")	${reb:-sudo -A reboot};;
"ğŸ–¥ shutdown")	${shut:-sudo -A shutdown -h now};;
esac
