#!/bin/sh
if [ $XDG_SESSION_TYPE = "wayland" ]; then
  cmds=( "ğŸ”’ Lock" "ğŸšª Logout" "â™» Renew WM" "ğŸ» Hibernate" "ğŸ”ƒ Reboot" "ğŸ–¥ Shutdown" )

selected=$(printf "%s\n" "${cmds[@]}"| wofi -d -l 6 -i -p "Choose an action: ")

case "$selected" in
"ğŸ”’ Lock")		swaylock;;
"ğŸšª Logout")	pkill Hyprland;;
"â™» Renew WM")	bspc wm -r;;
"ğŸ» Hibernate")	slock ${hib:-systemctl suspend-then-hibernate -i} ;;
"ğŸ”ƒ Reboot")	${reb:-sudo -A reboot};;
"ğŸ–¥ Shutdown")	${shut:-sudo -A shutdown -h now};;
esac

else
case "$RUNNING_WM" in
i3)
	i3_sysact
	;;
dwm)
	dwm_sysact
	;;
bspwm)
  bsp_sysact
  ;;
*)
  hypr_sysact
  ;;
esac
fi
