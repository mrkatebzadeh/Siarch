#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ğŸ”‹ Battery module" "ï‰‚: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
ï‰€: charged
â—: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	capacity=$(cat "$battery/capacity")
	timeleft=$(acpi -b | awk '{print $5}'| awk -F ":" '{print $1":"$2}')
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="ï–„" ;;
		"Discharging") 
        case 1 in
          $((capacity >= 95)) ) status="ï•¸" ;;
          $((capacity >= 90)) ) status="ï–" ;;
          $((capacity >= 80)) ) status="ï–€" ;;
          $((capacity >= 70)) ) status="ï•¿" ;;
          $((capacity >= 60)) ) status="ï•¾" ;;
          $((capacity >= 50)) ) status="ï•½" ;;
          $((capacity >= 40)) ) status="ï•¼" ;;
          $((capacity >= 30)) ) status="ï•»" ;;
          $((capacity >= 20)) ) status="ï•º" ;;
          $((capacity >= 10)) ) status="ï•¹" ;;
          * )
            status="ï–"
            notify-send "Low battery" "$(acpi -b)"
            ;;
        esac;;
		"Charging") 
         case 1 in
          $((capacity >= 95)) ) status="ï–„" ;;
          $((capacity >= 90)) ) status="ï–Š" ;;
          $((capacity >= 80)) ) status="ï–‰" ;;
          $((capacity >= 60)) ) status="ï–ˆ" ;;
          $((capacity >= 40)) ) status="ï–‡" ;;
          $((capacity >= 30)) ) status="ï–†" ;;
          $((capacity >= 20)) ) status="ï–…" ;;
          * ) status="ï–" ;;
        esac ;;
		"Not charging") status="ï–‚" ;;
		"Unknown") status="ï–";;
		*) exit 1 ;;
	esac
	# Will make a warn variable if discharging and low

  # Prints the info
	printf "  %s %d%%  \n" "$status" "$capacity"; unset warn
done && exit 0
