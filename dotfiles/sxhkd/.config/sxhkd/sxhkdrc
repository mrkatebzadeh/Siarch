
# Basic binds
super + Return
	terminal #Run Terminal
super + shift + Return
  id=$(cat /tmp/sptermid);bspc node $id --flag hidden;bspc node -f $id
#	tabbed -c -r 2 $TERMINAL -w "" #Run terminal with tabbed
#super + shift + Return
#	$TERMINAL -n "spterm" -g 120x34 #Run terminal with tabbed
super + q
	kill -9 `xdotool getwindowfocus getwindowpid` #Kill focused window
super + shift + q
    sysact #Show power options
#super + d
#	$TERMINAL -n fzfnova2 -e fzf-nova
#super + d
#	dmenu_run #dmenu lanucher
alt + Tab
    switch
alt + shift + l
    dmenukb
super + shift + d
	passmenu #Passmenu
super + e
    muttmails ; pkill -RTMIN+12 dwmblocks # rmdir ~/.abook #Email
super + f
  bspc node -t {tiled,fullscreen}  
super + shift + e
    $TERMINAL  -e abook -C ~/.config/abook/abookrc --datafile ~/.config/abook/addressbook #Address book
super + {j,k}
	bspc node -f {next,prev}.local
super + shift +{j,k}
	bspc node '@/' -C {backward,forward}
super + {h,l}
	bspc node -z {left -20 0, left 20 0}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + r
    $TERMINAL -e lfub #File manager
super + shift + b
    $TERMINAL -e lfub ~/.local/share/backgrounds 
super + shift + r
    $TERMINAL -e htop #Top
#super + BackSpace
#	dmenubibtex #Bibtex menu
super + shift + BackSpace
	dc-toggle #Docker start
super + m
	music
super + n
	$TERMINAL -e nvim -c VimwikiIndex #vimwiki
super + shift + n
	$TERMINAL -e newsboat; pkill -RTMIN+6 dwmblocks #RSS manager
super + shift + c
	siarch_i3_sticky
super + c
	calc
super + space
	launcher

super + shift + space
  bspc node -t {tiled,floating}
#super + shift + a
#	$TERMINAL -e alsamixer || pulsemixer; pkill -RTMIN+10 $STATUSBAR
#super + shift + c
#	mpv --no-osc --no-input-default-bindings --input-conf=/dev/null --title='mpvfloat' /dev/video0
super + shift + w
	$TERMINAL -e sudo nmtui #network manager
super + w
	$BROWSER #Broswer

# Et cetera...
super + grave
	dmenuunicode
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
    xdotool type $(grep -v '^#' ~/.local/share/siarch/snippets | dmenu -i -l 50 | cut -d' ' -f1)
XF86Launch1
	xset dpms force off
XF86TouchpadToggle
	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86Touchpad{Off,On}
	synclient TouchpadOff={1,0}
XF86MonBrightnessDown
	brightness down
XF86MonBrightnessUp
	brightness up

# Recording
# Take screenshot
Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png
# Pick screenshot type
shift + Print
	maimpick
# Print: Record audio or video; Del: kill recording
super + Print
	dmenurecord
super + Delete
	dmenurecord kill

# Pause audio
super + p
	mpc toggle
super + shift + p
  dwm_papis	
# Changes to next/previous tracks
super + {comma,period}
	mpc {prev,next}
# Restart track
super + shift + less
	mpc seek 0%
# Seek foward in song
super + {_,shift +} bracketright
	mpc seek +{10,120}
# Seek backward in song
super + {_,shift +} bracketleft
	mpc seek -{10,120}
# Increase volume
super + {equal,plus}
  volctl up
# Decrease volume
super {_,shift +} + minus
  volctl down
super + shift + m
  volctl mute

# Audiokeys
XF86AudioMute
    volctl mute
XF86Audio{Raise,Lower}Volume
    volctl {up,down}
XF86Audio{Next,Prev}
	mpc {next,prev}
XF86Audio{Pause,Play,Stop}
	mpc {pause,play,stop}
XF86Audio{Rewind,Forward}
	mpc seek {-,+}10
XF86AudioRecord
	dmenurecord
XF86AudioMedia
	$TERMINAL -e ncmpcpp

XF86PowerOff
    sysact
XF86Calculator
	calc
XF86Sleep
    sudo -A zzz
XF86WWW
	$BROWSER
XF86DOS
	$TERMINAL
XF86ScreenSaver
    slock & xset dpms force off; mpc pause; pauseallmpv
XF86TaskPane
	$TERMINAL -e htop
XF86Mail
	$TERMINAL -e neomutt; pkill -RTMIN+12 dwmblocks
XF86MyComputer
	$TERMINAL -e lf /

super + F3
	displayselect

#super + F4
#    $TERMINAL -e pulsemixer; kill -44 $(pidof dwmblocks)

super + F5 
  pkill -usr1 -x sxhkd; notify-send 'SXHKD' 'Reloaded config'

super + F6
	torwrap


super + F7
	td-toggle


super + F8
	mw -Y


super + {F9,F10}
	{dmenumount,dmenuumount}
super + F11
	mpv --no-cache --no-osc --no-input-default-bindings --profile=low-latency --input-conf=/dev/null --title=webcam $(ls /dev/video[0,2,4,6,8] | tail -n 1)
super + F12
  kill -HUP $(pgrep -u $USER "\bdwm$")
