[module/wired-network]
type = internal/network
interface = ${system.network_interface}
click-left=$TERMINAL -e nmtui
click-right=notify-send "🌐 Internet module" "\- Click to connect

[module/wireless-network]
type = internal/network
interface = ${system.network_interface}
click-left=$TERMINAL -e nmtui
click-right=notify-send "🌐 Internet module" "\- Click to connect

[module/network]
type = internal/network
interface = ${system.network_interface}
click-left=$TERMINAL -e nmtui
click-right=notify-send "🌐 Internet module" "\- Click to connect

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <ramp-signal>

format-disconnected = <label-disconnected>
format-disconnected-prefix = "睊"
format-disconnected-prefix-font = 2
format-disconnected-foreground = ${color.red}
;format-disconnected-background = ${color.magenta}

label-connected = "%{A1:$TERMINAL -e nmtui &:}%{A}"
label-disconnected = "%{A1:$TERMINAL -e nmtui &:}%{A}"

label-connected-foreground = ${color.magenta}
label-disconnected-foreground = ${color.red}

;label-connected-background = ${color.magenta}
;label-disconnected-background = ${color.magenta}

ramp-signal-0 = ""
ramp-signal-1 = ""
ramp-signal-2 = ""
ramp-signal-3 = ""
ramp-signal-4 = ""
